<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivHistoryBook"
            android:layout_width="60dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivHistoryBook"
            android:layout_toStartOf="@id/tvHistoryStatus"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Judul Buku"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tanggal"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHistoryPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rp 0"
                android:textColor="#0066FF"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvHistoryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#E8F5E9"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Selesai"
            android:textColor="#2E7D32"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnDeleteHistory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvHistoryStatus"
            android:layout_marginTop="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Hapus Riwayat"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#FF5252" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>