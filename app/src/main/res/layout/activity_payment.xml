<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarPayment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBackPayment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:padding="6dp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halaman Pembayaran"
            android:textColor="#111318"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/bottomConfirmCard"
        app:layout_constraintTop_toBottomOf="@id/topBarPayment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Buku"
                android:textColor="#111318"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgBookPayment"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTitlePayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Judul Buku"
                            android:textColor="#111318"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAuthorPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Penulis"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ringkasan Belanja"
                android:textColor="#111318"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Harga Buku" android:textColor="#6B7280"/>
                        <TextView android:id="@+id/tvPriceItem" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 0" android:textColor="#111318" android:textStyle="bold"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Biaya Admin" android:textColor="#6B7280"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 2.000" android:textColor="#111318" android:textStyle="bold"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="12dp" android:background="#E5E7EB"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Harga" android:textColor="#111318" android:textStyle="bold" android:textSize="16sp"/>
                        <TextView android:id="@+id/tvTotalPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 0" android:textColor="#135BEC" android:textStyle="bold" android:textSize="16sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Metode Pembayaran"
                android:textColor="#111318"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/btnMethodGopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/payment_method_normal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivIconGopay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gopay"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/ivIconGopay"
                    android:layout_centerVertical="true"
                    android:text="Gopay"
                    android:textColor="#111318"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/rbGopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="#135BEC"
                    android:clickable="false"
                    android:checked="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnMethodDana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/payment_method_normal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivIconDana"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dana"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/ivIconDana"
                    android:layout_centerVertical="true"
                    android:text="Dana"
                    android:textColor="#111318"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/rbDana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="#135BEC"
                    android:clickable="false"
                    android:checked="false"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btnMethodBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/payment_method_normal"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivIconBank"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/bank"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/ivIconBank"
                        android:layout_centerVertical="true"
                        android:text="Transfer Bank"
                        android:textColor="#111318"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/ivChevronBank"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/arrow_down_float"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutBankList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB" android:layout_marginBottom="12dp"/>

                    <RelativeLayout android:id="@+id/btnBankBRI" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bank BRI" android:textColor="#111318"/>
                        <RadioButton android:id="@+id/rbBRI" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:buttonTint="#135BEC" android:clickable="false" android:checked="false"/>
                    </RelativeLayout>

                    <RelativeLayout android:id="@+id/btnBankBNI" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bank BNI" android:textColor="#111318"/>
                        <RadioButton android:id="@+id/rbBNI" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:buttonTint="#135BEC" android:clickable="false" android:checked="false"/>
                    </RelativeLayout>

                    <RelativeLayout android:id="@+id/btnBankMandiri" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bank Mandiri" android:textColor="#111318"/>
                        <RadioButton android:id="@+id/rbMandiri" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:buttonTint="#135BEC" android:clickable="false" android:checked="false"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomConfirmCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="Bayar Sekarang"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="#135BEC"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>