<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="#101622"
            android:contentDescription="Kembali" />
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btnFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart_empty"
            android:layout_marginEnd="16dp"
            app:tint="#101622"
            android:contentDescription="Favorit" />
        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
            app:tint="#101622"
            android:contentDescription="Bagikan" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/layoutBeli">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="260dp"
                android:layout_gravity="center_horizontal" app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"> <ImageView
                android:id="@+id/imgDetailBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#101622"
                android:text="Judul Buku" />

            <TextView
                android:id="@+id/tvDetailPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#101622"
                android:text="Rp0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Deskripsi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#101622"/>

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#666666"
                android:text="Memuat deskripsi..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Informasi Buku"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#101622"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="2"
                android:alignmentMode="alignMargins">

                <LinearLayout android:orientation="vertical" android:layout_columnWeight="1" android:layout_marginBottom="16dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bahasa" android:textColor="#888888" android:textSize="12sp" />
                    <TextView android:id="@+id/tvInfoLanguage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Indonesia" android:textStyle="bold" android:textColor="#101622" />
                </LinearLayout>

                <LinearLayout android:orientation="vertical" android:layout_columnWeight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tanggal Rilis" android:textColor="#888888" android:textSize="12sp" />
                    <TextView android:id="@+id/tvInfoRelease" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:textStyle="bold" android:textColor="#101622" />
                </LinearLayout>

                <LinearLayout android:orientation="vertical" android:layout_columnWeight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Penerbit" android:textColor="#888888" android:textSize="12sp" />
                    <TextView android:id="@+id/tvInfoPublisher" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:textStyle="bold" android:textColor="#101622" />
                </LinearLayout>

                <LinearLayout android:orientation="vertical" android:layout_columnWeight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Halaman" android:textColor="#888888" android:textSize="12sp" />
                    <TextView android:id="@+id/tvInfoPages" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:textStyle="bold" android:textColor="#101622" />
                </LinearLayout>
            </GridLayout>

            <View android:layout_width="match_parent" android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="8dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPreview"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Baca Preview"
            android:backgroundTint="#FFFFFF"
            android:textColor="#135bec"
            app:strokeColor="#135bec"
            app:strokeWidth="1dp"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Beli Sekarang"
            android:backgroundTint="#135bec"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>